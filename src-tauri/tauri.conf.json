{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "bluephx",
  "version": "0.1.0",
  "identifier": "com.bluephx.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "npx expo start --web",
    "beforeBuildCommand": "npx expo export --platform web"
  },
  "app": {
    "windows": [
      {
        "title": "Blue Phoenix",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ]
  }
}
